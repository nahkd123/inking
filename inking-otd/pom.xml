<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>io.github.nahkd123</groupId>
		<artifactId>inking</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>inking-otd</artifactId>
	<name>Inking (OpenTabletDriver implementation)</name>
	<dependencies>
		<dependency>
			<groupId>io.github.nahkd123</groupId>
			<artifactId>inking-api</artifactId>
		</dependency>
		<dependency>
			<groupId>io.github.nahkd123</groupId>
			<artifactId>inking-internal-java21</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<release>21</release>
					<enablePreview>true</enablePreview>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.gmaven</groupId>
				<artifactId>groovy-maven-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<source>${project.basedir}/scripts/buildsln.groovy</source>
					<properties>
						<csproj>${project.basedir}/Inking.Otd/Inking.Otd.csproj</csproj>
						<nativesDir>${project.basedir}/src/main/resources</nativesDir>
					</properties>
				</configuration>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>execute</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>